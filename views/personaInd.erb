<link rel="stylesheet" href="/css/stylepersonas.css">

<header>
  <a href="/personas">
    <img src="/icons/botonVolver.png" style="width: 60px; height: 60px;" class="botonVolver" alt="Volver">
  </a>
  <h1 class="titulo">Museo</h1>
</header>

<div class="container-centrado">
  <% personas.each do |persona| %>
    <div class="card-wrapper">
      
      <!-- Card de la persona -->
      <div class="card">
        <div class="imge">
          <div class="Usericon">
            <img src="<%= persona[:usericon] %>" style="width: 50px; height: 50px; border-radius: 10px;" alt="User icon">
          </div>
          <p class="UserName"><%= persona[:nombre] %></p>
          <div class="social-media">
           <a href="https://www.instagram.com/gastacuadros?igsh=c3FiODM2amtkbTJ5">
                    <svg viewBox="0 0 448 512" xmlns="http://www.w3.org/2000/svg">
                        <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"></path>
                    </svg>
                </a>
                <a href="#">
                    <svg viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
                        <path d="M504 256C504 119 393 8 256 8S8 119 8 256c0 123.78 90.69 226.38 209.25 245V327.69h-63V256h63v-54.64c0-62.15 37-96.48 93.67-96.48 27.14 0 55.52 4.84 55.52 4.84v61h-31.28c-30.8 0-40.41 19.12-40.41 38.73V256h68.78l-11 71.69h-57.78V501C413.31 482.38 504 379.78 504 256z"></path>
                    </svg>
                </a>
          </div>
        </div>

        <div class="card-img">
          <% persona[:imagenes].each do |img| %>
            <img src="<%= img %>" alt="Imagen de <%= persona[:nombre] %>">
          <% end %>
        </div>

        <div class="description">
          <p class="UserDescription"><%= persona[:descripcion] %></p>
        </div>
      </div>

      <!-- Sección de Aportar -->
      <div class="aportar-section">
        <label for="aporte_<%= persona[:nombre] %>" class="aporte-label">Aportar</label><br>
        <input type="number" id="aporte_<%= persona[:nombre] %>" class="aporte-input" placeholder="$" min="0">

        <p class="obtenes">Obtendrías:</p>
        <p class="resultado" id="resultado_<%= persona[:nombre] %>">_ BeeCoin 
          <img src="/images/beecoin.png" alt="BeeCoin" class="moneda-icon">
        </p>

        <!-- Botón para redirigir -->
        <a href="/welcome" class="boton-aportar">Aportar</a>
      </div>

    </div>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".aporte-input").forEach(input => {
      input.addEventListener("input", () => {
        const valor = parseFloat(input.value);
        const beeCoins = isNaN(valor) ? 0 : Math.floor(valor / 100);
        const resultado = input.parentElement.querySelector(".resultado");
        resultado.innerHTML = `${beeCoins} BeeCoin <img src="/images/beecoin.png" class="moneda-icon" alt="BeeCoin">`;
      });
    });
  });
</script>
